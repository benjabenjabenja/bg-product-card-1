{
    "version": "0.0.1",
    "license": "MIT",
    "main": "dist/index.js",
    "typings": "dist/index.d.ts",
    "files": [
        "dist",
        "src"
    ],
    "repository": {
        "url": "https://github.com/benjabenjabenja/bg-product-card-1",
        "type": "git",
        "directory": "packages/bg-product-card-1"
    },
    "keywords": [
        "react",
        "product",
        "card",
        "product-card"
    ],
    "homepage": "https://github.com/benjabenjabenja/bg-product-card-1",
    "release": {
        "branches": [
            "master"
        ]
    },
    "engines": {
        "node": ">=10"
    },
    "scripts": {
        "start": "tsdx watch",
        "build": "npm run clean && tsdx build && npm run copyfilecss",
        "test": "tsdx test --passWithNoTests",
        "test:watch": "tsdx test --watch",
        "lint": "tsdx lint",
        "prepare": "tsdx build",
        "size": "size-limit",
        "analyze": "size-limit --why",
        "clean": "rimraf dist",
        "copyfilecss": "copyfiles -u 1 src/**/*.css dist/"
    },
    "peerDependencies": {
        "react": ">=16",
        "react-dom": ">=16"
    },
    "husky": {
        "hooks": {
            "pre-commit": "tsdx lint"
        }
    },
    "prettier": {
        "printWidth": 80,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "es5"
    },
    "name": "bg-product-card-1",
    "author": "Benjamin Gonzalez (Fernando Herrera author of the course Udemy)",
    "module": "dist/bg-product-card-1.esm.js",
    "size-limit": [
        {
            "path": "dist/bg-product-card-1.cjs.production.min.js",
            "limit": "10 KB"
        },
        {
            "path": "dist/bg-product-card-1.esm.js",
            "limit": "10 KB"
        }
    ],
    "devDependencies": {
        "@babel/preset-env": "^7.27.1",
        "@babel/preset-react": "^7.27.1",
        "@rollup/plugin-image": "^3.0.3",
        "@rollup/plugin-replace": "^6.0.2",
        "@size-limit/preset-small-lib": "^11.2.0",
        "@testing-library/dom": "^10.4.0",
        "@testing-library/react": "^16.3.0",
        "@types/react": "^19.1.2",
        "@types/react-dom": "^19.1.3",
        "babel-jest": "^29.7.0",
        "copyfiles": "^2.4.1",
        "husky": "^9.1.7",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^25.5.4",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "react-test-renderer": "^19.1.0",
        "rimraf": "^6.0.1",
        "rollup-plugin-postcss": "^4.0.2",
        "size-limit": "^11.2.0",
        "tsdx": "^0.14.1",
        "tslib": "^2.8.1",
        "typescript": "^3.9.10"
    },
    "dependencies": {
        "@types/react-test-renderer": "^19.1.0"
    },
    "jest": {
        "moduleNameMapper": {
            "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "identity-obj-proxy",
            "\\.(css|less|scss|sass)$": "identity-obj-proxy"
        }
    }
}
